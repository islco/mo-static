{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "0.1.0",
  "description": "{{ cookiecutter.description }}",
  "scripts": {
    "build": "gulp build:production",
    "dev": "gulp start",
    "postinstall": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run build; fi"
  },
  "author": "{{ cookiecutter.author }}",
  "dependencies": {
    "autoprefixer": "6.1.0",
    "babel-plugin-syntax-trailing-function-commas": "6.5.0",
    "babel-preset-es2015": "6.1.4",
    "babelify": "7.2.0",
    "browserify": "12.0.1",
    {% if cookiecutter.use_foundation_sites == 'y' -%}"browserify-shim": "3.8.12",{%- endif %}
    "critical": "github:addyosmani/critical#6a2e129",
    "del": "2.0.2",
    "eslint": "2.7.0",
    "eslint-config-airbnb": "6.2.0",
    "eslint-plugin-react": "4.3.0",
    "eslintify": "2.0.1",
    {% if cookiecutter.use_foundation_sites == 'y' -%}"foundation-sites": "6.2.3",{%- endif %}
    "gulp": "3.9.0",
    "gulp-clean-css": "2.0.4",
    "gulp-header": "1.8.2",
    "gulp-htmlmin": "1.2.0",
    "gulp-nunjucks": "2.2.0",
    "gulp-plumber": "1.1.0",
    "gulp-postcss": "6.0.1",
    "gulp-purifycss": "0.2.0",
    "gulp-rev": "6.0.1",
    "gulp-rev-replace": "0.4.2",
    "gulp-sass": "2.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-stylelint": "1.0.0",
    "gulp-uglify": "1.4.2",
    "gulp-util": "3.0.6",
    {% if cookiecutter.use_foundation_sites == 'y' -%}"jquery": "3.0.0",{%- endif %}
    "loose-envify": "1.1.0",
    "nconf": "0.8.4",
    "run-sequence": "1.1.4",
    "stylelint-config-standard": "4.0.1",
    "stylelint-selector-bem-pattern": "0.2.3",
    "uglifyify": "3.0.1",
    "vinyl-buffer": "1.0.0",
    {% if cookiecutter.use_vue_components == 'y' -%}"vue": "^1.0.26",{%- endif %}
    "vinyl-source-stream": "1.1.0"
  },
  "devDependencies": {
    {% if cookiecutter.use_vue_components == 'y' -%}
    "babel-plugin-transform-runtime": "^6.9.0",
    "vueify": "^8.6.0",
    {%- endif %}
    "browser-sync": "2.10.0",
    "watchify": "3.6.0"
  },
  {% if cookiecutter.use_foundation_sites == 'y' -%}
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.core.js",
    "foundation-mediaquery": "./node_modules/foundation-sites/js/foundation.util.mediaQuery.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": { "exports": "Foundation",  "depends": "jquery" },
    "foundation-mediaquery": { "depends": "foundation" }
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  {%- endif %}
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.4.0 <5"
  }
}
