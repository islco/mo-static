    "babelify": "7.2.0",
    "browserify": "12.0.1",
    "critical": "github:addyosmani/critical#6a2e129",
    "del": "2.0.2",
    "eslint": "2.7.0",
    "eslint-config-airbnb": "6.2.0",
    "eslint-plugin-react": "4.3.0",
    "gulp": "3.9.0",
    "gulp-clean-css": "2.0.4",
    "gulp-header": "1.8.2",
    "gulp-htmlmin": "1.2.0",
    "gulp-nunjucks": "2.2.0",
    "gulp-plumber": "1.1.0",
